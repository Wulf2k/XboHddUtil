<Window x:Class="XboHddUtil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XboHddUtil"
        mc:Ignorable="d"
        Title="XboHddUtil" Width="750" Height="550" >
    <Grid Background="Black" Margin="0,0,0,0">
        <DataGrid x:Name="dgHDDs" Height="auto" Width="175" Margin="10,10,10,10" IsReadOnly="False" HorizontalAlignment="Left" SelectionChanged="DgHDDs_SelectionChanged" HeadersVisibility="None" />
        <TabControl Height="auto" Width="auto" Margin="200,10,10,10">
            <TabItem x:Name="tabHDDs" Header="HDD">
                <Grid Background="#FFE5E5E5">
                    
                    <DataGrid x:Name="dgHDDProps" Height="auto" Width="auto" Margin="10,10,0,10" IsReadOnly="False" HeadersVisibility="None" />

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
