<Window x:Class="XboHddUtil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XboHddUtil"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <TextBox HorizontalAlignment="Left" Height="75" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="450" Margin="300,10,0,0" Name="txtOutput"/>
        <Button Content="Get Info" HorizontalAlignment="Left" Margin="180,10,0,0" VerticalAlignment="Top" Width="75" Name="btnGetInfo" Click="BtnGetInfo_Click"/>
        <TabControl Height="auto" Width="auto" Margin="10,100,10,10">
            <TabItem x:Name="tabHDDs" Header="HDD">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dgHDDs" Height="auto" Width="200" Margin="10,10,10,10" SelectionUnit="Cell" IsReadOnly="False" HorizontalAlignment="Left" SelectionChanged="DgHDDs_SelectionChanged" HeadersVisibility="None" />

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
